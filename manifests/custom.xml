<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Manifest -->
  <project path="manifest" name="android_manifest" remote="oreo" />

  <!-- Devices -->
  <project path="device/lge/hammerhead" name="android_device_lge_hammerhead" remote="oreo" />
  <project path="kernel/lge/hammerhead" name="android_kernel_lge_hammerhead" remote="oreo" />
  <project path="vendor/lge" name="android_vendor_lge" remote="oreo" />

  <!-- Build repositories -->
  <remove-project name="platform/build" />
  <project path="build/make" name="android_build" remote="oreo" groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  
  <!-- Hardware -->
  <remove-project name="platform/hardware/qcom/audio"/>
  <project path="hardware/qcom/audio" name="android_hardware_qcom_audio" remote="oreo" />
  <project path="hardware/qcom/camera" name="android_hardware_qcom_camera" remote="oreo" />
  <remove-project name="platform/hardware/qcom/display"/>
  <project path="hardware/qcom/display" name="android_hardware_qcom_display" remote="oreo" />
  <remove-project name="platform/hardware/qcom/media"/>
  <project path="hardware/qcom/media" name="android_hardware_qcom_media" remote="oreo" />
</manifest>
